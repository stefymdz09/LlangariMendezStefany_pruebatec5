{
  "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "esModuleInterop": true,  
      "allowSyntheticDefaultImports": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "target": "ES2020",
      "sourceMap": true,
      "lib": ["es6", "DOM"],
      "outDir": "./lib",
      "paths": {
        "*": ["./*"],
        "src/*": ["./src/*"]
      },
      "typeRoots": ["./node_modules", "./types"],
      "types": ["node", "@wdio/sync"]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
   
  },
  "include": [
      "src", "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
